<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/day_tv"
        android:layout_width="100dp"
        android:textColor="@color/primary_color"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/weather_iv_daily"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/day_tv"
        app:layout_constraintRight_toLeftOf="@id/day_deg_tv" />

    <TextView
        android:id="@+id/day_deg_tv"
        android:textColor="@color/primary_color"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/night_deg_tv" />

    <TextView
        android:id="@+id/night_deg_tv"
        android:textColor="@color/primary_color_60percent"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>